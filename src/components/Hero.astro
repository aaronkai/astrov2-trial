---
import { Picture } from "@astrojs/image/components";
import heroImage from "@images/heroImage.webp";
const imageString = `bg-[url(${heroImage})]`;
---

<!-- <aside
  class=`h-2/5 lg:h-1/2 max-h-96 bg-cover flex justify-center items-end lg:items-end border-y-4 border-zinc-900`
> -->
<aside class=`border-y-4 border-zinc-900 relative`>
  <a
    class="text-zinc-100 font-stencil text-4xl lg:text-5xl bg-zinc-800 p-6 lg:p-16 bg-opacity-75 w-full md:text-5xl hover:text-green-600 flex items-center justify-center absolute bottom-0"
    href="/schedule">Find a Workout!</a
  >
  <Picture
    src={heroImage}
    widths={[800, 1600, 2400]}
    sizes="(max-width: 2400px) 2400px, (max-width:1600) 1600px, (max-width:800) 800px"
    alt="banner image"
    aspectRatio="2400:1350"
    quality="50"
    class=""
  />
</aside>
