---
import { Picture } from "@astrojs/image/components";
import heroImage from "@images/heroImage.webp";
const imageString = `bg-[url(${heroImage})]`;
---

<!-- ToDo: get image dialed in --><!-- ToDo: hook up image to Sanity -->
<aside class="relative border-y-4 border-zinc-900 bg-zinc-900">
  <a
    class="absolute bottom-0 flex w-full items-center justify-center bg-zinc-900 bg-opacity-75 p-6 font-stencil text-4xl text-zinc-100 hover:text-green-600 md:text-5xl lg:p-16 lg:text-5xl"
    href="/schedule">Find a Workout!</a
  >
  <Picture
    src={heroImage}
    widths={[500, 800, 1200]}
    sizes="(max-width: 1200) 1200px, (max-width:800) 800px, (max-width:500) 500px"
    alt="probably guys working out"
    aspectRatio="2400:1350"
    class="mx-auto w-full max-w-6xl"
    loading="eager"
  />
</aside>
