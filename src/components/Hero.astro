---
import { getHeroImage } from "@sanity/api";
const { heroImage, urlFor } = await getHeroImage();
const wideURL = urlFor(heroImage[0].image)
  .width(1200)
  .height(801)
  .quality(80)
  .saturation(-100)
  .url();
const phoneURL = urlFor(heroImage[0].image)
  .width(500)
  .quality(80)
  .saturation(-100)
  .url();
const srcset = `${wideURL} 1200w, ${phoneURL} 600w`;
---

<aside
  class="relative border-y-4 border-zinc-900 bg-zinc-900 lg:h-3/4 lg:overflow-hidden"
>
  <a
    class="absolute bottom-0 flex w-full items-center justify-center bg-zinc-900 bg-opacity-75 p-6 font-stencil text-4xl font-bold uppercase text-zinc-100 hover:text-green-600 md:text-5xl lg:p-16"
    href="/schedule">Find a Workout!</a
  >
  <img
    srcset={srcset}
    src={phoneURL}
    alt="Probably guys working out"
    sizes="(max-width: 600px) 600px, 1200px"
    class="mx-auto"
    width="1200px"
    height="800px"
  />
</aside>
