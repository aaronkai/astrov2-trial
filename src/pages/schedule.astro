---
import { getSchedules } from "@sanity/api";
import Layout from "@layouts/Layout.astro";
import Schedule from "@components/Schedule.svelte";
import LocationMap from "@components/LocationMap.astro";
const { schedules } = await getSchedules();
---

<!-- ToDo: Make map reactive. Only display selected locations. -->
<Layout title="schedule">
  <div class="mx-4 my-8 grid max-w-4xl gap-4 md:mx-auto">
    <header>
      <h1>Schedule</h1>
    </header>
    <Schedule schedules={schedules} client:load />
    <LocationMap />
  </div>
</Layout>
