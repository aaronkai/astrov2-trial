---
import { getEvents } from "@sanity/api";

import DisplayEvents from "@components/DisplayEvents.svelte";
import type { PageData } from "./$types";
export let data: PageData;
import Layout from "@layouts/Layout.astro";

const { events } = await getEvents();
---

<!-- ToDo: add option for seeing all events -->
<Layout title="F3-Avl-Events">
  <div class="grid gap-4 lg:gap-8 m-4 my-8 max-w-4xl md:mx-auto">
    <h1 class="mb-4">Upcoming Events</h1>
    <div class="flex flex-col flex-wrap lg:flex-row gap-4">
      <DisplayEvents events={events} />
    </div>
  </div>
</Layout>
